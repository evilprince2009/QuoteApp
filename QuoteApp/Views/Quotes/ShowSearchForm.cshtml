@{
    ViewData["Title"] = "Search your favorite Quote";
}

<h4>Search for a Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <div class="form-group">
                <label for="SearchTerm" class="control-label"></label>
                <input name="SearchTerm" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
                <input type="submit" asp-action="Index" value="Back to List" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>